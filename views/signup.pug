extends layout

block content
  h1.text-center 新規登録
  .user-form
    .error-messages= error
    form(action="/users/signup" method="post")
      .form
        label(for="user_name") 名前：
        .float-right
          input(id="user_name" type="text" placeholder="半角英数2-10文字" value=name name="name")
      .form
        label(for="user_email") メールアドレス：
        .float-right
          input(id="user_email" type="email" placeholder="example@ex.com" value=email name="email")
      .form
        label(for="user_password") パスワード：
        .float-right
          input(id="user_password" type="password" placeholder="半角英数8-16文字" name="password")
      .form
        label(for="user_password_confirmation") パスワード確認：
        .float-right
          input(id="user_password_confirmation" type="password" name="password_confirmation")
      .text-center
        input(type="submit" value="登録")
        //- input(type="hidden" name="_csrf" value=csrfToken)
    .text-right.links
      a(href="/users/login") ログイン